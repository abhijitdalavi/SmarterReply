{
  "name": "Smart(er) Reply for Gmail",
  "description": "Create custom email responses for Gmail Smart Reply.",
  "version": "0.0.1",
  "manifest_version": 2,
  "permissions": [
    "contextMenus",
    "identity",
    "storage",
    "activeTab",
    "tabs",
    "webNavigation"
  ],
  "browser_action": {
    "default_title": "Smart(er) Reply",
    "default_icon": "assets/icon.png",
    "default_popup": "extension/popup/index.html"
  },
  "background": { "scripts": ["extension/background.js"] },
  "content_scripts": [
    {
      "matches": [
        "http://mail.google.com/*",
        "https://mail.google.com/*",
        "http://www.mail.google.com/*",
        "https://www.mail.google.com/*"
      ],
      "js": ["extension/content.js"],
      "run_at": "document_end"
    }
  ]
}
